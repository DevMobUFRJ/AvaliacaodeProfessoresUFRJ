<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_avaliacao_feitas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufrj.dcc.devmob.avaliacaoprofessoresufrj.avaliacao_feitas"
    android:background="@color/CorFundo">

    <Button
        android:id="@+id/btn_didatica"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/buttonshape"
        android:text="Didática"
        android:layout_below="@+id/ratingBar"
        android:layout_toStartOf="@+id/btn_mat"
        android:layout_marginEnd="17dp" />

    <Button
        android:text="Editar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_prox"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#BDBDBD"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_comp"
        android:textColor="@color/black"
        />

    <TextView
        android:text="@string/lbl_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mat"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edt_com"
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:layout_width="500dp"
        android:layout_height="175dp"
        android:background="@android:color/background_light"
        android:hint="Comentários"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:gravity="top|left"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btn_prox"
        android:layout_centerHorizontal="true"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:scaleType="fitCenter"
        android:stepSize="0.5"
        android:backgroundTint="@color/yellow"
        android:theme="@style/RatingBar"

        />

    <Button
        android:id="@+id/btn_mat"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="Material"
        android:background="@drawable/buttonshape"
        android:layout_alignStart="@+id/txt_mat"
        android:layout_alignBottom="@+id/btn_didatica" />

    <Button
        android:id="@+id/btn_organizacao"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Organização"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_didatica"
        android:layout_alignStart="@+id/ratingBar" />

    <Button
        android:id="@+id/btn_comp"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/buttonshape"
        android:text="Compreensão"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/btn_organizacao"
        android:layout_toEndOf="@+id/btn_organizacao" />

    <Button
        android:id="@+id/btn_paciencia"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/buttonshape"
        android:text="Paciência"
        android:layout_toEndOf="@+id/btn_mat"
        android:layout_alignBottom="@+id/btn_mat" />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Voltar"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#0277BD"
        android:textColor="@color/CorFundo"
        android:layout_alignStart="@+id/btn_comp"
        android:layout_below="@+id/edt_com"
        android:layout_alignBottom="@+id/btn_prox" />

</RelativeLayout>