<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufrj.dcc.devmob.avaliacaoprofessoresufrj.Form1"
    android:background="@color/CorFundo">

    <Button
        android:id="@+id/Btn1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="117dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:background="@android:color/darker_gray"
        android:text="DidÃ¡tica" />

    <Button
        android:text="@string/lbl_prox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_prox"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="@string/lbl_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mat"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edt_com"
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:background="@android:color/background_light"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_prox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:layout_width="200dp" />

    <TextView
        android:text="Geral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/ratingBar"
        android:isIndicator="false"
        android:stepSize="0.5"
        android:layout_below="@+id/txt_mat"
        android:layout_alignLeft="@+id/edt_com"
        android:layout_alignStart="@+id/edt_com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Result1_ID"
        android:text="0.0"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
