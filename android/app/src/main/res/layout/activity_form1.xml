<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufrj.dcc.devmob.avaliacaoprofessoresufrj.FormActivity"
    android:background="@color/CorFundo">

    <Button
        android:id="@+id/btn_didatica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="39dp"
        android:background="?attr/colorButtonNormal"
        android:text="Didática"
        android:layout_below="@+id/ratingBar"
        android:layout_toStartOf="@+id/btn_prox" />

    <Button
        android:text="@string/lbl_prox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_prox"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="#0277BD"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="@string/lbl_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mat"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edt_com"
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:layout_width="250dp"
        android:layout_height="175dp"
        android:background="@android:color/background_light"
        android:hint="Comentários"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:gravity="top|left"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btn_prox"
        android:layout_alignStart="@+id/btn_didatica"
        android:layout_alignEnd="@+id/btn_paciencia" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:scaleType="fitCenter"
        android:stepSize="0.5"
        android:backgroundTint="@color/yellow"
        android:theme="@style/RatingBar"

        />

    <Button
        android:id="@+id/btn_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:text="Material"
        android:layout_alignBaseline="@+id/btn_didatica"
        android:layout_alignBottom="@+id/btn_didatica"
        android:layout_alignStart="@+id/btn_prox" />

    <Button
        android:id="@+id/btn_organizacao"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:text="Organização"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btn_didatica"
        android:layout_alignStart="@+id/ratingBar" />

    <Button
        android:id="@+id/btn_comp"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:background="?attr/colorButtonNormal"
        android:text="Compreensão"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/btn_organizacao"
        android:layout_alignBottom="@+id/btn_organizacao"
        android:layout_alignEnd="@+id/btn_paciencia" />

    <Button
        android:id="@+id/btn_paciencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_mat"
        android:layout_alignBottom="@+id/btn_mat"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/btn_mat"
        android:layout_toRightOf="@+id/btn_mat"
        android:background="?attr/colorButtonNormal"
        android:text="Paciência" />

</RelativeLayout>
